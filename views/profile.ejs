<!DOCTYPE html>
<html
  lang="en"
  x-data="{ 
  darkMode: localStorage.getItem('darkMode') === 'true' ? true : false,
  toggleDarkMode() {
    this.darkMode = !this.darkMode;
    localStorage.setItem('darkMode', this.darkMode);
  }
}"
